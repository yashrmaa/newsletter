# AI Provider Configuration (Choose One)
# Options: free, openai, claude
LLM_PROVIDER=free

# AI Provider API Keys (Only required for your chosen provider)
# Free tier: No API key needed
# Budget tier: Requires OpenAI API key
# Premium tier: Requires Anthropic/Claude API key
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
CLAUDE_API_KEY=your_claude_key_here

# Budget Control
MONTHLY_BUDGET_LIMIT=0.00  # Set to 0 for free tier, 10.00 for budget, 15.00 for premium

# Core Infrastructure (Optional - only needed for publishing to GitHub Pages)
GITHUB_TOKEN=your_github_token
GITHUB_REPO=username/newsletter-site
GITHUB_BRANCH=main
GITHUB_USERNAME=username

# Optional: External APIs
NEWS_API_KEY=your_news_api_key

# Newsletter Settings
NEWSLETTER_TIME="06:00"
TIMEZONE="America/Los_Angeles"
MAX_ARTICLES=15

# Local Settings
CACHE_DIR="./tmp/cache"
LOG_LEVEL="info"
DEBUG_MODE=true
DATABASE_PATH="./data/newsletter.db"

# Private URL Settings (for feedback system)
FEEDBACK_SECRET=your_random_secret_string_here